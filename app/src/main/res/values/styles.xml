<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="LayoutMain" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:background">@drawable/nba</item>-->
        <!--<item name="android:background">@android:color/black</item>-->
        <item name="android:padding">20dp</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="LinearLayout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainHeading" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">NBA Quiz</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">80dp</item>
        <item name="android:textColor">#ffa500</item>
        <item name="android:textSize">44sp</item>
    </style>

    <style name="ImageNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="HeadingText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#ffa500</item>
    </style>

    <style name="HeadingImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:textColor">#ffa500</item>
    </style>

    <style name="TextAnswerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">#ffa500</item>

    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:textColorHint">#ffa500</item>
        <item name="android:textColor">#ffa500</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="RadioGroup">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">#ffa500</item>
        <item name="android:textColor">#ffa500</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">#ffa500</item>
        <item name="android:textColor">#ffa500</item>
    </style>


    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_gravity">center</item>
    </style>


</resources>
